<maim class='page'>
  <div class='section column-page'>
    {{#with header}}
      <header class='header'>
        <section class='section__content'>
          <div class='header__content'>
            <div class='header__block'>
              <a href='#'><img
                  src='/svg/apple.svg'
                  alt='Logo'
                  class='header__icon'
                /></a>
              <nav class='header__block'>
                {{#each links}}
                  <a
                    href='{{url}}'
                    class='header__link'
                  >{{text}}</a>
                {{/each}}
              </nav>
            </div>
            <div class='header__block'>
              <a href='#'><img
                  src='/svg/search.svg'
                  alt='Logo'
                  class='header__icon'
                /></a>
              <a href='#'><img
                  src='/svg/cart.svg'
                  alt='Logo'
                  class='header__icon'
                /></a>
            </div>
          </div>
        </section>
      </header>
      <section class='section__content'>
        {{#with ad}}
          <div class='ad__content'>
            <p class='ad__title'>{{title}}</p>
              {{#with link}}
                <a
                  href='{{url}}'
                  class='ad__link'
                >{{text}}</a>
              {{/with}}
          </div>
        {{/with}}
      </section>
    {{/with}}

    {{#with iphone_pro}}
      <section class='product product--big product--iphone_pro product--dark product--top'>
        <div class='product__content'>
            <h1 class="product__title">{{title}}</h1>
            <p class="product__description">{{descriptions}}</p>
            <div class="product__action">
                {{#with link}}
                    {{#each text}}
                        <a href="{{../link}}" class="product__link">{{this}}</a>
                    {{/each}}
                {{/with}}
            </div>
        </div>
      </section>
    {{/with}}

